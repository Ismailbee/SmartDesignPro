# ============================================================================
# SMARTDESIGNPRO - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# FIREBASE CONFIGURATION
# ----------------------------------------------------------------------------
# Get these from Firebase Console → Project Settings → Your apps
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ----------------------------------------------------------------------------
# AUTHENTICATION SERVER
# ----------------------------------------------------------------------------
AUTH_PORT=3003

# JWT Secrets - GENERATE SECURE RANDOM STRINGS!
# Run: node scripts/generate-secrets.js
ACCESS_TOKEN_SECRET=generate_a_secure_random_string_here_64_chars_minimum
REFRESH_TOKEN_SECRET=generate_another_secure_random_string_here_64_chars_minimum
SESSION_SECRET=generate_session_secret_here

# Token Expiry
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SALT_ROUNDS=10

# ----------------------------------------------------------------------------
# AUTHENTICATION SERVER
# ----------------------------------------------------------------------------
AUTH_PORT=3003

# ----------------------------------------------------------------------------
# CORS CONFIGURATION
# ----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
NODE_ENV=development
VITE_APP_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:3003

# ----------------------------------------------------------------------------
# OLLAMA (Local AI)
# ----------------------------------------------------------------------------
VITE_OLLAMA_ENABLED=true
VITE_OLLAMA_BASE_URL=http://127.0.0.1:11434
VITE_OLLAMA_MODEL=qwen2.5:0.5b
VITE_OLLAMA_TIMEOUT_MS=60000

# ----------------------------------------------------------------------------
# MONITORING (Optional)
# ----------------------------------------------------------------------------
VITE_SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
