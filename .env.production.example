# ============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================================================
# This is a template for production environment variables
# Copy to .env.production and fill with actual production values
# ============================================================================

# ----------------------------------------------------------------------------
# FIREBASE CONFIGURATION (Production)
# ----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY=your_production_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-prod-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-prod-project
VITE_FIREBASE_STORAGE_BUCKET=your-prod-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_prod_sender_id
VITE_FIREBASE_APP_ID=your_prod_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_prod_measurement_id

# ----------------------------------------------------------------------------
# JWT SECRETS (MUST BE DIFFERENT FROM DEVELOPMENT!)
# ----------------------------------------------------------------------------
ACCESS_TOKEN_SECRET=GENERATE_SECURE_64_CHAR_SECRET_FOR_PRODUCTION
REFRESH_TOKEN_SECRET=GENERATE_ANOTHER_SECURE_64_CHAR_SECRET_FOR_PRODUCTION
SESSION_SECRET=GENERATE_SESSION_SECRET_FOR_PRODUCTION

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------
NODE_ENV=production
AUTH_PORT=3003
AI_PORT=3002
MARKETPLACE_PORT=3004
AI_RETOUCH_PORT=3005
ADMIN_PORT=3006

# ----------------------------------------------------------------------------
# CORS (Production URLs)
# ----------------------------------------------------------------------------
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# ----------------------------------------------------------------------------
# APPLICATION URLS (Production)
# ----------------------------------------------------------------------------
VITE_APP_URL=https://app.yourdomain.com
APP_URL=https://app.yourdomain.com
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_AI_API_URL=https://api.yourdomain.com/ai
VITE_MARKETPLACE_API_URL=https://api.yourdomain.com/marketplace

# ----------------------------------------------------------------------------
# SECURITY (Production Settings)
# ----------------------------------------------------------------------------
COOKIE_SECURE=true
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=1800000
SALT_ROUNDS=12

# Rate Limiting (Stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# ----------------------------------------------------------------------------
# MONITORING (Production)
# ----------------------------------------------------------------------------
VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
LOG_LEVEL=warn

# ----------------------------------------------------------------------------
# EMAIL SERVICE (Production)
# ----------------------------------------------------------------------------
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_production_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=SmartDesignPro

# ----------------------------------------------------------------------------
# CLOUD STORAGE (Production - Use S3 or similar)
# ----------------------------------------------------------------------------
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartdesignpro-production

# ----------------------------------------------------------------------------
# DATABASE (Production)
# ----------------------------------------------------------------------------
# Use managed database service in production
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/smartdesignpro-prod
REDIS_URL=redis://production-redis-url:6379

# ----------------------------------------------------------------------------
# ANALYTICS (Production)
# ----------------------------------------------------------------------------
VITE_GA_MEASUREMENT_ID=G-PRODUCTION-ID
VITE_MIXPANEL_TOKEN=production_mixpanel_token

# ----------------------------------------------------------------------------
# PAYMENT (Production)
# ----------------------------------------------------------------------------
STRIPE_PUBLIC_KEY=pk_live_your_production_stripe_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_production_webhook_secret

# ----------------------------------------------------------------------------
# SSL/HTTPS (Production)
# ----------------------------------------------------------------------------
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# ----------------------------------------------------------------------------
# FEATURE FLAGS (Production)
# ----------------------------------------------------------------------------
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_MARKETPLACE=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_ANALYTICS=true
DEBUG=false
HOT_RELOAD=false

