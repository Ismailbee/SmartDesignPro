rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for backgrounds/thumbnails (served via CDN/Storage)
    match /backgrounds/{allPaths=**} {
      allow read: if true;
      // Writes should be restricted to admins (recommended: custom claims)
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Default: deny everything else by default (tighten as needed)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
